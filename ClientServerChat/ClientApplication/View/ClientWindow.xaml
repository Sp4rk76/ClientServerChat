<Window x:Class="ClientApplication.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApplication.View"
        mc:Ignorable="d"
        Title="Client for Chat" Height="386" Width="314" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelTitle" Content="Bienvenue sur Easy Chat !" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Width="287" Grid.RowSpan="2"/>
        <local:ConnexionControl Grid.Row="1" Visibility="Visible"/>
        <Button x:Name="buttonStart" Content="Start Client" HorizontalAlignment="Left" Margin="122,272,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStart_Click"/>
        <local:ChatControl Grid.RowSpan="2" Visibility="Hidden"/>
    </Grid>
   
</Window>
